{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "调试单个C++文件",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "C/C++: clang++ 生成活动文件",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "调试单个Fortran文件",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Fortran: gfortran 编译活动文件",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "调试CMake项目 - 主程序",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/main",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: 构建项目",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "调试CMake项目 - 自定义程序",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:executableName}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: 构建项目",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "inputs": [
        {
            "id": "executableName",
            "type": "promptString",
            "description": "可执行文件名称",
            "default": "main"
        }
    ]
}