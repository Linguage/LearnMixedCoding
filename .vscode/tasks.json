{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "创建build目录",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: clang++ 生成活动文件",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: /usr/bin/clang++",
            "dependsOn": ["创建build目录"]
        },
        {
            "label": "执行已编译程序",
            "type": "shell",
            "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "dependsOn": ["C/C++: clang++ 生成活动文件"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": [],
            "detail": "执行build目录中的可执行文件"
        },
        {
            "label": "构建并运行",
            "dependsOrder": "sequence",
            "dependsOn": ["C/C++: clang++ 生成活动文件", "执行已编译程序"],
            "group": {
                "kind": "none"
            },
            "problemMatcher": [],
            "detail": "构建当前文件并执行生成的程序"
        },
        {
            "label": "Fortran: gfortran 编译活动文件",
            "type": "shell",
            "command": "/opt/homebrew/bin/gfortran",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /opt/homebrew/bin/gfortran",
            "dependsOn": ["创建build目录"]
        },
        {
            "label": "执行已编译Fortran程序",
            "type": "shell",
            "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "dependsOn": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": [],
            "detail": "执行build目录中的Fortran可执行文件"
        },
        {
            "label": "构建并运行Fortran程序",
            "dependsOrder": "sequence",
            "dependsOn": ["Fortran: gfortran 编译活动文件", "执行已编译Fortran程序"],
            "group": {
                "kind": "none"
            },
            "problemMatcher": [],
            "detail": "构建当前Fortran文件并执行生成的程序"
        }
    ]
}